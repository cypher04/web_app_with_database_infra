<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Web App with Database</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>Web App with Database</h1>
      <p class="status">
        Database: <span class="badge <%= dbStatus === 'Connected' ? 'badge-ok' : 'badge-err' %>"><%= dbStatus %></span>
      </p>
    </header>

    <section class="card">
      <h2>Add New Item</h2>
      <form id="itemForm">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required placeholder="Item name">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description" rows="3" placeholder="Optional description"></textarea>
        </div>
        <button type="submit" class="btn">Add Item</button>
      </form>
    </section>

    <section class="card">
      <h2>Items</h2>
      <div id="itemsList">
        <p class="muted">Loading items...</p>
      </div>
    </section>
  </div>

  <script src="/js/app.js"></script>
</body>
</html>
